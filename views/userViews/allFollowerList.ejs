<% layout('layouts/boilerplate')%> 

<style>
.suggested{
    max-width: 640px;
    width:100%;
    border:1px solid rgb(180, 179, 179);
    margin:10px auto;
    padding:24px;
    border-radius: 8px;
}
.aligning{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    margin-bottom:20px;
}
.aligning>div>a{
    color:black;
    font-weight: bold;
}

</style>

<h4 style='text-align: center;margin:40px' >Followers</h4>

<div class='suggested'>

<% if(followers.length!=0){ %>
    
    <% for(follower of followers){ %>


        <div class='aligning'>   

            <div>
                <img src="data:image/<%=user.image.contentType%>;base64, 
                <%=user.image.data.toString('base64') %>" width="40px" height="40px" style='border-radius: 50%;' alt="Image">

                &nbsp&nbsp&nbsp<a href='/otherprofile/<%=user._id%>/show'><%=follower.username%></a>
            </div>
        
        
            <a class="btn btn-primary" role='button' href='/removefollower/<%=follower._id%>'>Remove from followers</a>

        </div> 
        

    <% } %> 

<% } else { %>
    
    <p style='text-align: center;font-weight: bold;'>You don't have any followers!</p>

<% } %> 

</div>
