<% layout('layouts/boilerplate')%>


    
    <p><%=post.owner.username%> </p>


    <p>Post : </p>
    <img src="data:image/<%=post.image.contentType%>;base64, 
    <%=post.image.data.toString('base64') %>" width="200" height="200" alt="Image">

    
    <% if((currentUser._id).equals(post.owner._id)) { %>

        <a href='/edit/post/<%=post._id%>'>Edit Post</a>

    <% } %> 

    <p><%=post.description%></p>

    <p>Location : <%=post.postlocation%></p>


    <a href='/sharepost/<%=post._id%>'>Share Post</a>

    <br><br>

    <% if((currentUser.bookmarks).includes(post._id)){ %>
        
        <a href='/removebookmarkshow/<%=post._id%>' style='font-size: larger;'><i class="fas fa-bookmark"></i></a>

    <% } else { %> 

        <a href='/addbookmarkshow/<%=post._id%>' style='font-size: larger;'><i class="far fa-bookmark"></i></a> 

    <% } %> 

    <br><br>

    <%if(!((post.likes).includes(currentUser._id))){ %> 

    <a  href='/likeshow/<%=post._id%>' style='font-size: larger;'><i class="far fa-heart"></i></a>

    <% } else { %> 

        <a  href='/unlikeshow/<%=post._id%>' style='font-size: larger; color : red;'><i class="fas fa-heart"></i></a>

    <% } %> 

    <p><%=post.likes.length%> Likes</p>

    <p>Comments</p>

    <form action='/commentadd/<%=post._id%>' method='POST'>

    <div style='width:200px'>

        <input type='text' id='myTextarea' name='message' required>

    </div>

    <br><br>

    <button type='submit'>Add Comment</button>

    </form>

    <script>
        $(document).ready(function(){
            $("#myTextarea").emojioneArea();
        })
    </script>

    <br><br>

    <% for(comment of post.comments){ %>
        
        <%=comment.owner.username%> -  <%=comment.message%> 

        <br><br>
    <% } %> 
